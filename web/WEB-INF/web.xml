    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>org.sunjoo.servlet.filters.PrintAccessLog</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>q
    <servlet>
        <servlet-name>Simple Error Handler</servlet-name>
        <servlet-class>org.sunjoo.servlet.error.SimpleErrorHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Simple Error Handler</servlet-name>
        <url-pattern>/SimpleErrorHandler</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/print/123</location>
    </error-page>
    <context-param>
        <param-name>dname</param-name>
        <param-value>sun.jdbc.odbc.JdbcOdbcDriver</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>system</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>oracle</param-value>
    </context-param>
    <context-param>
        <param-name>name</param-name>
        <param-value>sunjoo</param-value>
    </context-param>
    <listener>
        <listener-class>org.sunjoo.servlet.test.SampleSessionListener</listener-class>
    </listener>
</web-app>
